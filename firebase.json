{
  "hosting": [
    {
      "target": "homepage",
      "public": "dist-homepage",   
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "**", "destination": "/index.html" }
      ]
    },
    {
      "target": "scorecards",
      "public": "dist-scorecards",      
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/scorecards/**", "destination": "/index.html" }
      ]
    }
  ]
}
