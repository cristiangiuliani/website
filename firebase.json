{
  "hosting": {
    "target": "homepage",
    "public": "dist", 
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/scorecards",
        "destination": "https://cristian-giuliani-scorecards.web.app/"
      },
      {
        "source": "/scorecards/**",
        "destination": "https://cristian-giuliani-scorecards.web.app/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}